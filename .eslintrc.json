{
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-var": [2],
    "prefer-destructuring": [2],
    "object-shorthand": [2]
  },
  "overrides": [{
    "files": "tests/lib/utils/**",
    "env": {"mocha": true}
  }],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
